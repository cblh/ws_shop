- if notice
  %p#notice
    = notice


%h1 Your Pragmatic Catalog

- @products.each do |product|
  .row
    .col-xs-9.col-md-6
      %p= product.title
      %a{:href => product_path(product), class: "thumbnail"}
        -# TODO修改成image_url
        -# = image_tag(product.image_url)
        = image_tag("data:image/svg+xml;base64,", class: "img-responsive")
    .col-xs-6.col-md-3
      %span.price= number_to_currency(product.price)
      = button_to '加入购物车', line_items_path(product_id: product), remote: true, class: 'btn btn-primary'