= form_for @order, role: 'form' do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control', size: 40
  .form-group
    = f.label :address
    = f.text_area :address, class: 'form-control', row: 3, cols: 40
  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control', size: 40
  .form-group
    = f.label :pay_type
    = f.select :pay_type, Order::PAYMENT_TYPES, { prompt: '选择一种支付方式' }, { class: 'form-control' }
  .actions
    = f.submit 'Save', class: 'btn btn-primary btn-block'
