- if line_item == @current_item
  %tr{class: "success"}
    %td
      = line_item.quantity
      &times;
    %td= line_item.product.title
    %td= number_to_currency(line_item.total_price)
- else
  %tr
    %td
      = line_item.quantity
      &times;
    %td= line_item.product.title
    %td= number_to_currency(line_item.total_price)
