%h1 购物车列表

%table
  %thead
    %tr
      %th{colspan: 3}
  %tbody
    - @carts.each do |cart|
    %tr
      %td
        = link_to 'Show', cart
      %td
        = link_to 'Edit', edit_cart_path(cart)
      %td
        = link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New cart', new_cart_path