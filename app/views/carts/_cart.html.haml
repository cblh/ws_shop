- unless cart.line_items.empty?
  .cart_title 购物车
  %table.table
    = render(cart.line_items)

    %tr.total_line
      %td{colspan: 2} 总价
      %td.total_cell=number_to_currency cart.total_price

  = button_to '去支付', new_order_path, method: 'get', class: 'btn btn-primary'
  = button_to '清空购物车', cart, method: 'delete',data: { confirm: "确认清空购物车?" }, class: "btn btn-warning"
