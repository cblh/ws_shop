= form_for(@product) do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description, :rows => 6
  .field
    = f.label :image
    %br/
    = f.file_field :image
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .actions
    = f.submit
